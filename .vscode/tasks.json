{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "C++ Build (g++-15)",
			"type": "shell",
			"command": "g++-15",
			"args": [
				"-std=c++17",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}